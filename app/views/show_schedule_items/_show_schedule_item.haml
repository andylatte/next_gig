.row.bg-primary
  .col.text-white.mx-4.mt-2
    %h5= item.name
.card.rounded-0
  .card-block
    .row
      .col-2=fa_icon "user"
      .col=item.for_whom
    .row
      .col-2=fa_icon "clock-o"
      .col=l(item.start_time, format: :time) unless item.start_time.blank?
      .col="to: #{l(item.end_time, format: :time) unless item.end_time.blank?}"
    - unless item.comment.blank?
      .row.mt-2
        .col comment:
      .row  
        .col=item.comment
