.card
  .card-block
    - if @crew_members_available.blank?
      %h4{:class =>"card-title"} Crew Members
      .text-center
        %p.card-textWith There have been no crew members created yet
        =link_to "Create First Crew Member", new_admin_user_path, :class=>"btn btn-primary"
    - else
      %h4{:class =>"card-title"}
        Crew Members
        %span=link_to "Add Crew Member", new_admin_user_path, :class=>"btn btn-outline-primary btn-sm ml-4"
      %table{:class=>"table table-striped col-12 mb-4"}
        %thead
          %tr.row
            %td.col-2 First Name
            %td.col-2 Last Name
            %td.col-2 user.email
            %td.col-2 # of Shows
        - @crew_members_available.each do |user|
          %tr.row
            %td.col-2=user.first_name
            %td.col-2=user.last_name
            %td.col-2=user.email
            %td.col-2 
              %div{:class=>"btn-toolbar"}
                %div{:class=>"btn-group mr-2"}
                  = link_to "edit user", edit_admin_user_path(user), :class=>"btn btn-info btn-sm"
                  = link_to "delete user", admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-sm"
