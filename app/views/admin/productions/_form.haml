      =f.text_field :stage_size, :class=>"form-control"
  .form-group.row
    =f.label :local_backline, :class=>"col-2 col-form-label"
    .col-8
      =f.text_field :local_backline, :class=>"form-control"
  .form-group.row
    =f.label :access_notes, :class=>"col-2 col-form-label"
    .col-8
      =f.text_area :access_notes, :class=>"form-control"
  .form-group.row
    =f.label :loading_notes, :class=>"col-2 col-form-label"
    .col-8
      =f.text_area :loading_notes, :class=>"form-control"
  .form-group.row
    =f.label :credential_notes, :class=>"col-2 col-form-label"
    .col-8
      =f.text_area :credential_notes, :class=>"form-control"
  .form-group.row
    =f.label :comment, :class=>"col-2 col-form-label"
    .col-8
      =f.text_area :comment, :class=>"form-control"
  .row
    .col-4
      = link_to "Cancel", admin_tour_day_path(@tour_day, :anchor => "production"), :class => "btn btn-secondary"
      = f.submit "Save Production", :class=>"btn btn-primary"
