.card
  .card-block
    - if @tours.empty?
      %h4{:class =>"card-title"} Your Managed Tours
      .text-center
        %p.card-textWith There have been tours created yet
        =link_to "Create Tour", new_admin_tour_path, :class=>"btn btn-primary"
    - else
      %h4{:class =>"card-title"}
        Tour Days
        %span=link_to "Create Tour", new_admin_tour_path, :class=>"btn btn-outline-primary btn-sm ml-4"
      %table{:class=>"table table-striped col-12 mb-4"}
        %thead
          %tr.row
            %td.col-4 Name
            %td.col-2 Band
            %td.col-1 From..Till
            %td.col-1 # of Shows
            %td.col-2
        - @tours.each do |tour|
          %tr.row
            %td.col-4=link_to tour.tour_name, admin_tour_path(tour)
            %td.col-2=tour.band_name
            %td.col-1=tour.from_to
            %td.col-1=tour.tour_days_count
            %td.col-2
              %div{:class=>"btn-toolbar"}
                %div{:class=>"btn-group mr-2"}
                  = link_to "edit tour", edit_admin_tour_path(tour), :class=>"btn btn-info btn-sm"
                  = link_to "delete tour", admin_tour_path(tour), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-sm"
