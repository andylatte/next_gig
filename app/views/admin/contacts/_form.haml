= form_for resource do |f|
  = render "shared/error_messages", :target => @contact
  .form-group.row
    .col-2=""
    .col-3=f.label "Name", :class=>"col-4 col-form-label"
    .col-3=f.label "Phone", :class=>"col-4 col-form-label"
    .col-4=f.label "Email", :class=>"col-4 col-form-label"
  .form-group.row
    .col-2 Main
    .col-3=f.text_field :main_contact_name, :class=>"form-control"
    .col-3=f.text_field :main_contact_phone, :class=>"form-control"
    .col-4=f.text_field :main_contact_email,  :class=>"form-control"
  .form-group.row
    .col-2 Production
    .col-3=f.text_field :prod_contact_name, :class=>"form-control"
    .col-3=f.text_field :prod_contact_phone, :class=>"form-control"
    .col-4=f.text_field :prod_contact_email,  :class=>"form-control"
  .form-group.row
    .col-2 Hospitality
    .col-3=f.text_field :hosp_contact_name, :class=>"form-control"
    .col-3=f.text_field :hosp_contact_phone, :class=>"form-control"
    .col-4=f.text_field :hosp_contact_email,  :class=>"form-control"
  .form-group.row
    .col-2 Stage Manager
    .col-3=f.text_field :stage_manager_name, :class=>"form-control"
    .col-3=f.text_field :stage_manager_phone, :class=>"form-control"
    .col-4=f.text_field :stage_manager_email,  :class=>"form-control"
  .row
    .col-4
      = link_to "Cancel", admin_tour_day_path(@tour_day, :anchor => "contact"), :class => "btn btn-secondary"
      = f.submit "Save Contact", :class=>"btn btn-primary"
