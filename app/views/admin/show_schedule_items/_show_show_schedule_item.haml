%tr
  %th
    = item.name
  %td
    = item.for_whom
  %td
    = l(item.start_time, :format => :time) if item.start_time
  %td
    = l(item.end_time, :format => :time) if item.end_time
  %td
    = item.comment
  -unless print
    %td
      %div{:class=>"btn-toolbar"}
        %div{:class=>"btn-group mr-2"}
          =link_to "edit", edit_admin_show_schedule_item_path(item), :class=>"btn btn-info btn-sm"
          =button_to "delete", admin_show_schedule_item_path(item), method: :delete, :data => {confirm: "are you sure?"}, :class=>"btn btn-danger btn-sm"
