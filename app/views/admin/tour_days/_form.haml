= form_for [:admin, @tour, @tour_day] do |f|
  = render "shared/error_messages", :target => @tour_day
  .field
    =f.label :date
    %br
    =f.date_field :date, autofocus: true
  .field
    =f.label :show_name
    %br
    =f.text_field :show_name
  .field
    =f.label :city
    %br
    =f.text_field :city
  .field
    =f.label :country
    %br
    =f.text_field :country
  .field
    =f.label :km_next_day
    %br
    =f.text_field :km_next_day
  .field
    =f.label :comment_next_day
    %br
    =f.text_area :comment_next_day
  .field
    =f.label :time_zone
    %br
    =f.text_field :time_zone
  .action
    = f.submit "Save Tour Days"
