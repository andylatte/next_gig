.card-block#promo_schedule
  -unless @tour_day.promo_schedule_items.empty?
    %h4.card-title
      Promo Schedule
      %span=link_to "Add Show Promo Item", new_admin_tour_day_promo_schedule_item_path(@tour_day), :class=>"btn btn-outline-primary btn-sm ml-4" unless print
    %table{:class=>"table table-striped col-10 mb-4"}
      %thead
        %tr
          %th Name
          %th for_whom
          %th destination
          %th start time
          %th end time
          %th contact
          %th Comment
          - unless print
            %th
      %tbody
        - @tour_day.promo_schedule_items.each do |item|
          = render :partial => "admin/promo_schedule_items/show_promo_schedule_item", :locals => {item: item, print: print}
  -else
    -unless print
      %h4.card-title Promo Schedule
      .text-center
        %p.card-textWith There has been No Promo Schedule created yet
        =link_to "create promo schedule", new_admin_tour_day_promo_schedule_item_path(@tour_day), :class=>"btn btn-success"
