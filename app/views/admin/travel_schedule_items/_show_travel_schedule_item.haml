%tr.row
  %td.col-1
    = item.name
  %td.col-2
    = item.for_whom
  %td.col-1
    = item.number
  %td.col-1
    = item.origin
  %td.col-1
    = item.destination
  - unless print
    %td.col-1
      = l(item.start_time, :format => :time) if item.start_time
  %td.col-1
    = l(item.departure_datetime, :format => :long) if item.departure_datetime
  %td.col-1
    = l(item.arrival_datetime, :format => :long) if item.arrival_datetime
  - unless print
    %td.col-1
      = item.duration
  %td.col-1
    = item.comment
  - unless print
    %td.col-1
      %div{:class=>"btn-toolbar"}
        %div{:class=>"btn-group mr-2"}
          =link_to "edit", edit_admin_travel_schedule_item_path(item), :class=>"btn btn-info btn-sm"
          =button_to "delete", admin_travel_schedule_item_path(item), method: :delete, :data => {confirm: "are you sure?"}, :class=>"btn btn-danger btn-sm"
