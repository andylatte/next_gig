#tour_day
  = render :partial => "tour_days/tour_day_info"
  .row.mx-0.text-center.text-muted
    .col
      %h3.card-title.pt-2.mb-2
        =fa_icon("paperclip")
        Production
  .card.rounded-0.border-0
    .row.bg-primary
      .col.text-white.mx-4.mt-2
        %h5 Production Info
    .card-block
      .row
        .col-4 Stage Size:
        .col-8= @production.stage_size
      .row
        .col-4 Local Backline:
        .col-8= @production.local_backline
      .row
        .col-4 Access Notes:
        .col-8= @production.access_notes
      .row
        .col-4 Loading Notes:
        .col-8= @production.loading_notes
      .row
        .col-4 Credential Notes:
        .col-8= @production.credential_notes
      .row
        .col-4 Comment:
        .col-8= @production.comment
