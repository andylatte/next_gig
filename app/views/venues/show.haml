#tour_day
  = render :partial => "tour_days/tour_day_info" 
  .row.mx-0.text-center.text-muted
    .col
      %h3.card-title.pt-2.mb-2
        =fa_icon("glass")
        Venue / Event
  .card.rounded-0.border-0
    .row.bg-primary
      .col.text-white.mx-4.mt-2
        %h5 Location
    .card-block
      .row
        .col-3 Venue:
        .col-9= @venue.venue_name
      .row
        .col-3 Address:
        .col-9
          = @venue.address_1
          = @venue.address_2
          %br= "#{@venue.zip_code} #{@venue.city}"
          = @venue.country
      .row
        .col-3 URL:
        .col-9= link_to @venue.url, @venue.url, target: "_blank" 
      .row
        .col-3 Kind:
        .col-9=@venue.venue_type

  .card.rounded-0.border-0
    .row.bg-primary
      .col.text-white.mx-4.mt-2
        %h5 Event
    .card-block
      .row
        .col-3 Slot:
        .col-9=@venue.slot
      .row
        .col-3 Stage:
        .col-9=@venue.stage
      .row
        .col-3 Capacity:
        .col-9=@venue.capacity
      .row
        .col-3 Sales:
        .col-9=@venue.sales
      .row
        .col-3 Comment:
        .col-9= @venue.comment

  